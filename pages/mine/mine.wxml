<view id="my"> 
    <view class="member">    	 
        <view class="userinfo-avatar">        
          <open-data  type="userAvatarUrl"></open-data>
        </view>

    	<view class="member-infor"> 
          <view class='fl'>        
            <view wx:if="{{user_name}}">
              <open-data type="userNickName"></open-data>
              <view class='member-infor-u'>普通会员</view>
            </view>            
            <button wx:else open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
          </view>

          <!-- <view class='fr member-infor-m' bindtap='mobile'>绑定手机</view>  -->
          <view class='clear'></view> 
      </view> 
    </view> 
     <navigator url="order/order?type=0" class='item'>
       <view class='left'>我的订单</view>
        <view class='right'>
      <text>查看全部订单</text>
      <image  src='../../images/arrow-right.png'></image>
    </view>
    </navigator>
    <view class="member-list">

    	<view class='list1'>  
         <navigator url="order/order?type=1" hover-class="none" >  		
    			<image src="../../images/0.png" />
    			<view>待付款 </view>     
           </navigator>		
    	</view> 
      <view class='list1' >  
           <navigator url="order/order?type=2" hover-class="none" >  		  		
    			<image src="../../images/2.png" />
    			<view>待发货 </view>   
           </navigator>		  		
    	</view>  
      <view class='list1' >    		
         <navigator url="order/order?type=3" hover-class="none" >  		  		
    			<image src="../../images/4.png" />
    			<view>已发货 </view> 
           </navigator>		    		
    	</view> 
      <view class='list1' >    	
         <navigator url="order/order?type=4" hover-class="none" >  		  		
    			<image src="../../images/5.png" />
    			<view>已完成 </view>    
          </navigator> 		
    	</view> 
    </view>
     <view class="my-item">
    <navigator url= "myBalance/myBalance" hover-class="navigator-hover">我的余额</navigator>
    <image  src='../../images/arrow-right.png'></image>

  </view>
  <view class="my-item">
    <navigator url= "myBalance/myBalance" hover-class="navigator-hover">收货地址</navigator>
        <image  src='../../images/arrow-right.png'></image>

  </view>
  <view class="my-item">
    <navigator url= "myBalance/myBalance" hover-class="navigator-hover">联系客服</navigator>
        <image  src='../../images/arrow-right.png'></image>

  </view>
</view>